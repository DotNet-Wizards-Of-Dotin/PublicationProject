<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns:p1="http://devart.com/schemas/EntityDeveloper/1.0"
				   xmlns="urn:nhibernate-mapping-2.2"
				   assembly="Domain"
				   namespace="Domain.Concrete.Schema.Accounting">
	
	<class name="User" table="Users" schema="Accounting">
		<id name="Id" type="Int32">
			<column name="Id" not-null="true" precision="10" scale="0" sql-type="int"/>
			<generator class="identity" />
		</id>
		<property name="Fullname" type="String">
			<column name="Fullname" not-null="true" length="100" sql-type="nvarchar" />
		</property>
		<property name="Username" type="String">
			<column name="Username" not-null="true" length="100" sql-type="nvarchar"/>
		</property>
		<property name="Password" type="String">
			<column name="Password" not-null="true" length="1000" sql-type="nvarchar"/>
		</property>
		<property name="Mobile" type="String" p1:nullable="true">
			<column name="Mobile" not-null="false" length="20" sql-type="nvarchar"/>
		</property>
		<property name="Email" type="String">
			<column name="Email" not-null="true" length="256" sql-type="nvarchar"/>
		</property>
		<property name="RoleId" type="Byte">
			<column name="RoleId" not-null="true" precision="3" scale="0" sql-type="tinyint"/>
		</property>
		<property name="ProfilePhoto" type="String">
			<column name="ProfilePhoto" not-null="true" length="1000" sql-type="nvarchar"/>
		</property>
		<property name="CreationDate" type="DateTime">
			<column name="CreationDate" not-null="true" sql-type="datetime2"/>
		</property>
		<property name="IsDeleted" type="Boolean">
			<column name="IsDeleted" not-null="true" sql-type="bit"/>
		</property>
		<many-to-one name="Role" class="Role">
			<column name="RoleId" not-null="true" precision="3" scale="0" sql-type="tinyint"/>
		</many-to-one>
	</class>
</hibernate-mapping>