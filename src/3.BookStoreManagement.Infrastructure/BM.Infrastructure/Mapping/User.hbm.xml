<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
				   assembly="BM.Domain"
				   namespace="BM.Domain.Users">

	<class name="User" table="Users" schema="Accounting">
		<id name="Id" type="Int32">
			<column name="Id" not-null="true" sql-type="int"/>
			<generator class="identity" />
		</id>
		<property name="Fullname" type="String">
			<column name="Fullname" not-null="true"  sql-type="nvarchar" />
		</property>
		<property name="Username" type="String">
			<column name="Username" not-null="true"  sql-type="nvarchar"/>
		</property>
		<property name="Password" type="String">
			<column name="Password" not-null="true"  sql-type="nvarchar"/>
		</property>
		<property name="Mobile" type="String">
			<column name="Mobile" not-null="false"  sql-type="nvarchar"/>
		</property>
		<property name="Email" type="String">
			<column name="Email" not-null="true"  sql-type="nvarchar"/>
		</property>
		<property name="RoleId" type="Byte">
			<column name="RoleId" not-null="true"  sql-type="tinyint"/>
		</property>
		<property name="ProfilePhoto" type="String">
			<column name="ProfilePhoto" not-null="true" sql-type="nvarchar"/>
		</property>
		<property name="CreationDate" type="DateTime">
			<column name="CreationDate" not-null="true" sql-type="datetime2"/>
		</property>
		<property name="IsDeleted" type="Boolean">
			<column name="IsDeleted" not-null="true" sql-type="bit"/>
		</property>
		<many-to-one name="Role" class="BM.Domain.Role">
			<column name="RoleId" not-null="true" sql-type="tinyint"/>
		</many-to-one>
	</class>
</hibernate-mapping>