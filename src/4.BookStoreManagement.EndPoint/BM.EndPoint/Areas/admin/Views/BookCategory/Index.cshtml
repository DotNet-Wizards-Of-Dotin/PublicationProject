@{
	
	ViewData["title"] = "مدیریت دسته بندی کتاب ها";
}
@model List<BM.Application.Contracts.BookCategories.BookCategoryViewModel>
<div class="row">
	<div class="col-sm-12">
		<h4 class="page-title pull-right">@ViewData["title"]</h4>
		<p class="pull-left">
			<a class="btn btn-success btn-lg" data-toggle="ajax-modal" href="#showmodal=@Url.Action("Create","BookCategory")">ایجاد دسته کتاب جدید</a>
		</p>
	</div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در دسته بندی کتاب ها</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get" asp-area="admin" asp-controller="BookCategory" asp-action="Index" >
                    <div class="form-group">
                        <label class="sr-only" name="searchModel"></label>
                        <input class="form-control" name="searchModel" placeholder="نام دسته کتاب">
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" >مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست دسته بندی کتاب ها(@Model.Count)</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>عکس</th>
                                    <th>نام</th>
                                    <th>تاریخ ایجاد</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>
                                            <img src="~/BookPictures/@item.Picture" style="width: 70px; height: 70px" />
                                        </td>
                                        <td>@item.Name</td>
                                        <td>@item.CreationDate</td>
                                        <td>
	                                        <a class="btn btn-warning  waves-effect waves-light m-b-5" href="#showmodal=@Url.Action("Edit","BookCategory",new {item.Id})">
		                                        <i class="fa fa-edit"></i> ویرایش
	                                        </a>
                                            @if (item.IsDeleted)
	                                        {
		                                        <a class="btn btn-success  waves-effect waves-light m-b-5" href="@Url.Action("Delete","BookCategory",new {item.Id})">
			                                        <i class="fa fa-recycle"></i> بازگرداندن
		                                        </a>
	                                        }
                                            else
                                            {
	                                            <a class="btn btn-danger  waves-effect waves-light m-b-5" href="@Url.Action("Delete","BookCategory",new {item.Id})">
		                                            <i class="fa fa-remove"></i> حذف
	                                            </a>
                                            }
	                                        
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
	<script src="~/AdminTheme/assets/datatables/jquery.dataTables.min.js"></script>
	<script src="~/AdminTheme/assets/datatables/dataTables.bootstrap.js"></script>

	<script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}